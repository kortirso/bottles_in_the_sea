<header id="admin-navigation" class="flex flex-col">
  <%= link_to t('components.page_wrappers.admin.welcome'), admin_path, class: 'admin-nav-link' %>
  <%= link_to t('components.page_wrappers.admin.bottles'), admin_bottles_path, class: 'admin-nav-link' %>
  <div>
    <%= link_to t('components.page_wrappers.admin.home'), root_path %>
    <% I18n.available_locales.each do |locale| %>
      <%= link_to locale, change_locale(locale), aria: { label: t('components.page_wrappers.users_component.change_locale') } %>
    <% end %>
  </div>
</header>
<div class="admin-content">
  <%= content %>
</div>
