<header id="page-navigation">
  <div>
    <%= link_to t('components.page_wrappers.page_component.home'), root_path %>
    <% if Current.user %>
      <%= link_to t('components.page_wrappers.page_component.searchers'), profile_searchers_path %>
      <%= link_to t('components.page_wrappers.page_component.bottles'), profile_bottles_path %>
      <%= link_to t('components.page_wrappers.page_component.achievements'), profile_achievements_path %>
    <% end %>
  </div>
  <div>
    <% I18n.available_locales.each do |locale| %>
      <%= link_to locale, change_locale(locale), aria: { label: t('components.page_wrappers.users_component.change_locale') } %>
    <% end %>
    <% if Current.user %>
      <%= link_to t('components.page_wrappers.users_component.logout'), users_logout_path %>
    <% else %>
      <%= link_to t('components.page_wrappers.users_component.login'), users_login_path %>
      <%= link_to t('components.page_wrappers.users_component.sign_up'), users_sign_up_path %>
    <% end %>
  </div>
</header>
